{
  "name": "@bootcamp/backend",
  "version": "1.0.0",
  "description": "Bootcamp Backend",
  "main": "dist/src/index.js",
  "typings": "dist/src/index.d.ts",
  "author": "Diya Kithani",
  "license": "Apache-2.0",
  "scripts": {
    "bundle": "rimraf dist && tsc",
    "compile": "tsc",
    "compile:watch": "tsc -w",
    "dev": "nodemon --watch src --watch test --ext ts,json --exec \"npm run bundle && npm start\"",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "start": "node --enable-source-maps ./dist/src/index.js",
    "test": "jest --runInBand --detectOpenHandles ."
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "mysql2": "^3.10.0"
  },
  "devDependencies": {
    "@babel/core": "7.24.5",
    "@babel/preset-env": "7.24.5",
    "@babel/preset-typescript": "7.24.1",
    "@jest/globals": "29.7.0",
    "@tsconfig/node20": "20.1.4",
    "@types/express": "^4.17.21",
    "@types/jest": "29.5.12",
    "@types/node": "20.12.12",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "esbuild": "0.21.3",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "jest": "29.7.0",
    "nodemon": "3.1.0",
    "prettier": "3.2.5",
    "rimraf": "5.0.7",
    "typescript": "5.4.5"
  }
}
